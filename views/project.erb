<div class="clearfix mt-5">
	<h2 class="float-left">Project: <%= @project %> </h2>
	<button type="button" class="btn btn-primary float-right">Add New Class</button>
</div>

<div class="table-responsive-xl">
<table class="table table-hover text-center mt-3">
	<caption class="text-right">All classes under <%= @project %> accessible by <%= `whoami` %></caption>
	<thead class="thead-dark"><tr>	
		<th scope="col" class="text-left">Class Name</th>
		<th scope="col"># of Assignments</th>
		<th scope="col"># of Submissions</th>
		<th scope="col">Date Created</th>
	</thead></tr>
	<tbody>
	<% @table_rows.each do | c | %>
	<tr>
		<th scope="row" class="text-left"><a href="<%= url("/all/#{c.project}/#{c.name}") %>"><%= c.name %></a></th>
		<td><%= c.assignments %></td>
		<td><%= c.submissions %></td>
		<td><%= c.date_created.strftime("%F") %></td>
	</tr>
	<% end %>
	</tbody>
</table>
</div>
