<div class="card mt-3">
<div class="card-body table-responsive-xl">
	<h3 class="card-title flex-grow-1">Assignments <small class="text-muted">in <%= @class %> </small></h3>
	<table class="table table-hover text-center mt-3">
		<thead class="thead-dark"><tr>	
			<th scope="col" class="text-left">Name</th>
			<th scope="col">Status</th>
			<th scope="col">Date Created</th>
			<th scope="col">Date and Time Due</th>
			<th scope="col">Actions</th>
		</thead></tr>
		<tbody>
		<% @table_rows.each do | a | %>
		<tr>
			<th scope="row" class="text-left"><h5><%= a.name %></h5></th>
			<td><%= a.open? ? '<span class="text-success">Open</span>' : '<span class="text-danger">Locked</span>' %></td>
			<td><%= a.date_created.strftime("%F") %></td>
			<td><%= a.date_due.nil? ? "<span class=\"text-muted\">no due date set</span>" : 
					a.date_due.strftime('%F <span class="text-muted">at</span> %H:%M') %></td>
			<td style="width: 1%">
			<div class="btn-group dropright">
				<a role="button" class="btn btn-secondary btn-sm" 
					href="<%= url("/all/#{@project}/#{@class}/#{a.name}") %>">
					View submissions
				</a>
				<button type="button" class="btn btn-primary btn-sm dropdown-toggle dropdown-toggle-split" 
						data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
					More
  				</button>
  				<div class="dropdown-menu">
    				<a class="dropdown-item disabled" href="#">Download all submissions</a>
    				<a class="dropdown-item" target="_blank"
						 href="https://ondemand.osc.edu/pun/sys/files/fs<%=a.path%>/">Open in file explorer</a>
    				<a class="dropdown-item disabled" href="#">Rename</a>
    				<a class="dropdown-item disabled" href="#">Change date due</a>
					<% if a.open? %>	
    				<a class="dropdown-item disabled" href="#">Lock assignment</a>
					<% else %>
    				<a class="dropdown-item disabled" href="#">Unlock assignment</a>
					<% end %>
    				<div class="dropdown-divider"></div>
					<button class="btn btn-danger dropdown-item text-danger" type="button" data-toggle="modal" data-target="#confirmDelete<%=a.name%>" aria-controls="addClass">Delete</button>
  			</div>
		</div>	
		</td>

		</tr>	
		<% end %>
		<% if @table_rows.empty? %>
		<tr><td colspan="5" class="text-muted">no assignments yet, create one below</td></tr>
		<% end %>
		</tbody>
	</table>
</div>
</div>

<div class="card mt-4">
<div class="card-body">
<h3 class=card-title">Create new assignment <small class="text-muted"> directory for student submissions</small></h3>
<form action="<%= url('/add/assignment') %>" method="post">
	<div class="form-group">	
		<label for="assignmentName">Assignment name</label>
		<input type="text" class="form-control" id="assignmentName" name="assignment_name">
		<small class="form-text text-muted">This will be the name of a directory on the file system;
		 use alphanumberic characters and underscores only</small>
	</div>
	<div class="form-group">
		<label for="dateDue">Date due</label>
		<input class="form-control" id="dateDue" name="date_due" width="276">	
		<script>
			var yesterday = new Date();
			yesterday.setDate(yesterday.getDate()-1);
			$('#dateDue').datepicker({
				uiLibrary: 'bootstrap4',
				minDate: yesterday,
				format: 'yyyy-mm-dd'
			});
		</script>
		<small class="form-text text-muted">Leave blank to have no due date</small>
	</div>
	<div class="form-group">	
		<label for="timeDue">Time due</label>
		<input class="form-control" id="timeDue" name="time_due" width="276" placeholder="hh:mm" value="00:00">
		<script>
			$('#timeDue').timepicker({
				uiLibrary: 'bootstrap4',
				mode: '24hr'
			});
		</script>
		<small class="form-text text-muted">24 hour format, ignored if 'Date due' is blank</small>
	</div>	
	<input type="hidden" name="hw_dir" value="<%=@class_path%>">
	<button type="submit" class="btn btn-primary float-right">Submit</button>
</form>
</div>
</div>
