<div class="card mt-3">
<div class="card-body table-responsive-xl">
	<h3 class="card-title flex-grow-1">Submissions <small class="text-muted">for <%= @assignment_info.name %><small>
		in <%= @assignment_info.class %></small></small></h3>
	<table class="table table-hover text-center mt-3 mb-5">
		<thead class="thead-dark"><tr>	
			<th scope="col" class="text-left">Submitted By</th>
			<th scope="col">Size</th>
			<th scope="col">Late?</th>
			<th scope="col">Date Submitted</th>
			<th scope="col">Actions</th>
		</thead></tr>
		<tbody>
		<% @submission_infos.each do | s | %>
		<tr>
			<th scope="row" class="text-left"><h5><%= s.submitter %></h5></th>
			<td><%= s.size.pretty %></td>
			<td><%= s.late? ? '<span class="text-danger">yes</span>' : '<span class="text-success">no</span>' %></td>
			<td><%= s.date_submitted.strftime('%F <span class="text-muted">at</span> %H:%M') %></td>
			<td style="width:1%"><div class="btn-group dropdown">
				<a role="button" class="btn btn-secondary btn-sm" 
				href="<%= url("/download/#{s.path.relative_path_from(Pathname.new(PROJECTS_DIR))}")%>">
					Download submission
				</a>
  			</div></td>
		</tr>	
		<% end %>
		<% if @submission_infos.empty? %>
		<tr><td colspan="5"><h5 class="mt-3 mb-4 text-muted font-weight-normal">no submissions yet</h5></td></tr>
		<% end %>
		</tbody>
	</table>
</div>
</div>

